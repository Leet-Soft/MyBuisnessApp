<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avata1ImageView"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/avata3ImageView"
        app:layout_constraintEnd_toStartOf="@+id/avata2ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar1" />

    <ImageView
        android:id="@+id/avata2ImageView"
        android:layout_width="155dp"
        android:layout_height="151dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/avata4ImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avata1ImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar2" />

    <ImageView
        android:id="@+id/avata3ImageView"
        android:layout_width="154dp"
        android:layout_height="167dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/avata4ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avata1ImageView"
        app:srcCompat="@drawable/avatar3" />

    <ImageView
        android:id="@+id/avata4ImageView"
        android:layout_width="159dp"
        android:layout_height="164dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="273dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avata3ImageView"
        app:layout_constraintTop_toBottomOf="@+id/avata2ImageView"
        app:srcCompat="@drawable/avatar4" />
</androidx.constraintlayout.widget.ConstraintLayout>