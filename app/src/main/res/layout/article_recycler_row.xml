<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/articleRowTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potatoes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/articleRowBarcodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1234567890123" />

            <TextView
                android:id="@+id/articleRowPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3.55" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/articleRowDeleteImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/articleRowEditImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</LinearLayout>